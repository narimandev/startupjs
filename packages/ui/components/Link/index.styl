@require '../typography/Span/index.styl'

.root
  color: $UI.colors.mainText
  text-decoration underline
  &.primary
    color: $UI.colors.primary
    text-decoration-color @color
  &.block
    display flex
    text-decoration none

  &.xs
    font(xs)

  &.s
    font(s)

  &.l
    font(l)

  &.xl
    font(xl)

  &.xxl
    font(xxl)
